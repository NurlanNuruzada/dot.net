@model Product
@{
    ViewData["Title"] = "Delete";
}
<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-6">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title mb-4" style="color:red;font-size:20px">Delete Products</h4>
                            <form method="post" asp-action="Delete">
                                <input asp-for="Id" hidden/>

                                <div class="row justify-content-end">
                                    <div class="col-sm-9">
                                        <div>
                                            <button type="submit" class="btn btn-danger w-md">Delete</button>
                                            <a asp-controller="Admin" asp-action="Index" class="btn btn-primary" style="width:150px">
                                                Back to List
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- end card body -->
                    </div>
                    <!-- end card -->
                </div>
            </div>
        </div>
    </div>
</div>
